<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <!-- Background overlay (fully opaque to hide fanart and list) -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>black.png</texture>
            <colordiffuse>FF000000</colordiffuse>
        </control>
        
        <!-- Main popup container -->
        <control type="group">
            <!-- Shifted right to avoid overlapping left sidebar on some skins -->
            <posx>520</posx>
            <posy>140</posy>
            
            <!-- Popup background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1200</width>
                <height>800</height>
                <texture>white.png</texture>
                <colordiffuse>FF2A2A2A</colordiffuse>
                <bordertexture border="40">panel-background.png</bordertexture>
                <bordersize>20</bordersize>
            </control>
            
            <!-- Crunchyroll logo/title -->
            <control type="label">
                <posx>0</posx>
                <posy>40</posy>
                <width>1200</width>
                <height>80</height>
                <font>font16_title</font>
                <align>center</align>
                <textcolor>FFFF6B00</textcolor>
                <label>CRUNCHYROLL ACTIVATION</label>
            </control>
            
            <!-- Instructions -->
            <control type="label" id="4002">
                <posx>50</posx>
                <posy>130</posy>
                <width>1100</width>
                <height>60</height>
                <font>font13</font>
                <align>center</align>
                <textcolor>FFFFFFFF</textcolor>
                <label>Go to https://crunchyroll.com/activate and enter the code below:</label>
            </control>
            
            <!-- Activation code -->
            <control type="label" id="4000">
                <posx>0</posx>
                <posy>220</posy>
                <width>1200</width>
                <height>120</height>
                <font>font30_title</font>
                <align>center</align>
                <textcolor>FFFF6B00</textcolor>
                <label>------</label>
            </control>
            
            <!-- OR divider -->
            <control type="label">
                <posx>0</posx>
                <posy>360</posy>
                <width>1200</width>
                <height>40</height>
                <font>font13</font>
                <align>center</align>
                <textcolor>FFAAAAAA</textcolor>
                <label>- OR SCAN QR CODE -</label>
            </control>
            
            <!-- QR Code -->
            <control type="image" id="4001">
                <posx>450</posx>
                <posy>420</posy>
                <width>300</width>
                <height>300</height>
                <texture></texture>
                <aspectratio>keep</aspectratio>
                <bordersize>5</bordersize>
                <bordertexture>black.png</bordertexture>
            </control>
            
            <!-- QR Status (debug) -->
            <control type="label" id="4003">
                <posx>0</posx>
                <posy>730</posy>
                <width>1200</width>
                <height>30</height>
                <font>font10</font>
                <align>center</align>
                <textcolor>FFAAAAAA</textcolor>
                <label>Generating QR code...</label>
            </control>
            
            <!-- Waiting text -->
            <control type="label">
                <posx>0</posx>
                <posy>760</posy>
                <width>1200</width>
                <height>30</height>
                <font>font12</font>
                <align>center</align>
                <textcolor>FFAAAAAA</textcolor>
                <label>Waiting for activation... This dialog will close automatically.</label>
            </control>
        </control>
    </controls>
</window>


