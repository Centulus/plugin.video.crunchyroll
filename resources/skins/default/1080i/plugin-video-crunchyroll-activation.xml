<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <!-- Background base layer (fallback): use local texture tinted to #062634 -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>../media/smallbutton.png</texture>
            <colordiffuse>FF062634</colordiffuse>
            <aspectratio>stretch</aspectratio>
        </control>
        <!-- Background overlay: uniform color #062634 (opaque, full bleed) using skin color if available -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>colors/white.png</texture>
            <colordiffuse>FF062634</colordiffuse>
            <aspectratio>stretch</aspectratio>
        </control>
        
        <!-- Main popup container -->
        <control type="group">
            <!-- Centered popup -->
            <posx>360</posx>
            <posy>140</posy>
            
            <!-- Crunchyroll logo/title -->
            <control type="label">
                <posx>0</posx>
                <posy>40</posy>
                <width>1200</width>
                <height>80</height>
                <font>font16_title</font>
                <align>center</align>
                <textcolor>FFFF6B00</textcolor>
                <label>CRUNCHYROLL ACTIVATION</label>
            </control>
            
            <!-- Instructions -->
            <control type="label" id="4002">
                <posx>50</posx>
                <posy>130</posy>
                <width>1100</width>
                <height>60</height>
                <font>font13</font>
                <align>center</align>
                <textcolor>FFFFFFFF</textcolor>
                <label>Go to https://crunchyroll.com/activate and enter the code below:</label>
            </control>
            
            <!-- Activation code -->
            <control type="label" id="4000">
                <posx>0</posx>
                <posy>220</posy>
                <width>1200</width>
                <height>120</height>
                <font>font30_title</font>
                <align>center</align>
                <textcolor>FFFF6B00</textcolor>
                <label>------</label>
            </control>
            
            <!-- OR divider -->
            <control type="label">
                <posx>0</posx>
                <posy>360</posy>
                <width>1200</width>
                <height>40</height>
                <font>font13</font>
                <align>center</align>
                <textcolor>FFAAAAAA</textcolor>
                <label>- OR SCAN QR CODE -</label>
            </control>
            
            <!-- QR Code -->
            <control type="image" id="4001">
                <posx>450</posx>
                <posy>420</posy>
                <width>300</width>
                <height>300</height>
                <texture></texture>
                <aspectratio>keep</aspectratio>
                <bordersize>0</bordersize>
            </control>
            
            <!-- QR Status (debug) -->
            <control type="label" id="4003">
                <posx>0</posx>
                <posy>730</posy>
                <width>1200</width>
                <height>30</height>
                <font>font10</font>
                <align>center</align>
                <textcolor>FFAAAAAA</textcolor>
                <label></label>
            </control>
            
            <!-- Waiting text -->
            <control type="label" id="4004">
                <posx>0</posx>
                <posy>760</posy>
                <width>1200</width>
                <height>30</height>
                <font>font12</font>
                <align>center</align>
                <textcolor>FFAAAAAA</textcolor>
                <label>Waiting for activation... This dialog will close automatically.</label>
            </control>
        </control>
    </controls>
</window>


